<?xml version="1.0"?>
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <Button name="AuctipusSortButtonTemplate" mixin="AuctipusSortButton" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentLeft" file="Interface\FriendsFrame\WhoFrame-ColumnTabs">
                    <Size x="5" y="19"/>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                    </Anchors>
                    <TexCoords left="0" right="0.078125" top="0" bottom="0.59375"/>
                </Texture>
                <Texture name="$parentRight" file="Interface\FriendsFrame\WhoFrame-ColumnTabs">
                    <Size x="4" y="19"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                    <TexCoords left="0.90625" right="0.96875" top="0" bottom="0.59375"/>
                </Texture>
                <Texture name="$parentMiddle" file="Interface\FriendsFrame\WhoFrame-ColumnTabs">
                    <Size x="10" y="19"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentLeft" relativePoint="RIGHT"/>
                        <Anchor point="RIGHT" relativeTo="$parentRight" relativePoint="LEFT"/>
                    </Anchors>
                    <TexCoords left="0.078125" right="0.90625" top="0" bottom="0.59375"/>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
        <ButtonText name="$parentText" parentKey="Text"/>
        <NormalFont style="GameFontHighlightSmall"/>
