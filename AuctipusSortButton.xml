        <HighlightTexture file="Interface\PaperDollInfoFrame\UI-Character-Tab-Highlight" alphaMode="ADD">
            <Size x="5" y="24"/>
            <Anchors>
                <Anchor point="LEFT" x="0" y="0"/>
                <Anchor point="RIGHT" x="4" y="0"/>
            </Anchors>
        </HighlightTexture>
    </Button>
</Ui>
