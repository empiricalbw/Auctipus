<?xml version="1.0"?>
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <Frame name="AuctipusOptionsFrameTemplate" mixin="AuctipusOptionsFrame">
        <Frames>
            <CheckButton parentKey="ShowVendorPriceCheckButton" inherits="UICheckButtonTemplate">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontHighlight" text="Show Vendor Prices in Tooltip">
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" x="2"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </CheckButton>
            <CheckButton parentKey="ShowDisenchantInfoCheckButton" inherits="UICheckButtonTemplate">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-16" relativeKey="$parent.ShowVendorPriceCheckButton"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontHighlight" text="Show Disenchant Info in Tooltip">
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" x="2"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </CheckButton>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>
